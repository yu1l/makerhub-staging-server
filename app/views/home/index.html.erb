<%= stylesheet_link_tag 'home' %>

<!-- Main -->
<div class="container" id="home_index">
  <!-- Tabs -->
  <div class="tabs">
    <ul>
      <li id="streams" class="is-active"><a>配信中</a></li>
      <li id="records"><a>人気の録画</a></li>
    </ul>
  </div>
</div>

<!-- Streams -->
<div class="container" id="st">
  <%= render partial: 'streaming', locals: { users: @users } %>
  <div class="columns">
    <div class="column is-3">
      <div class="card">
        <div class="card-image">
          <figure class="image is-4by3">
            <img src="http://placehold.it/300x225" alt="">
          </figure>
          <span class="tag is-dark" style="float:right; border-radius:0;">UI/UX</span>
        </div>
        <div class="card-content" style="padding-bottom:12px;">
          <div class="media">
            <div class="media-left">
              <figure class="image is-32x32">
                <img src="https://pbs.twimg.com/profile_images/2237519069/Linux_Tux_931.png" alt="Image">
              </figure>
            </div>
            <div class="media-content">
              <p class="title is-5">Bootstrap使わない</p>
              <p class="subtitle is-6">@yhoshino11</p>
            </div>
          </div>
          <div class="content">
            <small>1時間40分32秒</small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

  <!-- Records -->
<div class="container" id="re">
  <%= render partial: 'records/all', locals: { records: Record.select { |r| r.duration.ceil > 0 } } %>
</div>

<%= javascript_include_tag 'home' %>
