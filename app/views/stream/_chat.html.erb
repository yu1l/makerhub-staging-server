<ul style='padding-bottom: 4px;'>
  <% chats.each do |chat| %>
    <li>
      <%= link_to stream_path(name: chat.sender), target: '_blank', style: 'color: #fff;' do %>
        <div class="columns" style="width:100%;">
          <div class="column is-1" style="margin-right: 4px;"><span class="icon"><%= image_tag User.find_by(name: chat.sender).twitter_image_url, alt: chat.sender, class: '' %></span></div>
          <div class="column is-11"><%= User.find_by(name: chat.sender).twitter_name %><br /><%= chat.text %></div>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>
