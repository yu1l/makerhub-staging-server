<h1><%= @user.streaming_key %></h1>
<ul>
  <% @user.records.each do |record| %>
    <li>
      <%= link_to play_record_path(name: @user.name, uuid: record.uuid), target: '_blank' do %>
        <%= image_tag record.screenshot_url, alt: record.uuid %>
      <% end %>
    </li>
  <% end %>
</ul>
<%= image_tag @user.twitter_image_url, alt: "#{@user.twitter_name}" %>
