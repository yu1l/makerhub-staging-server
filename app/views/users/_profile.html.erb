<h1><%= @user.streaming_key %></h1>
<ul>
  <% @user.records.reverse.each do |record| %>
    <div class='thumbnail' style="display:inline;">
      <%= link_to play_record_path(nickname: @user.nickname, uuid: record.uuid), target: '_blank' do %>
        <% if record.uploaded? %>
          <%= image_tag record.screenshot_url, alt: record.uuid, style: 'width: 200px;height:200px;' %>
        <% else %>
          <h1>Work in progress...</h1>
        <% end %>
      <% end %>
    </div>
  <% end %>
</ul>
<%= image_tag @user.gh.image, alt: "#{@user.gh.name}" %>
